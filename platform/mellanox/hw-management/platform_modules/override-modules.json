{
    "mp2888": {
        "path": "drivers/hwmon",
        "build_location": "pmbus",
        "build_opts" : {
            "CONFIG_SENSORS_MP2888" : "m"
        }
    },
    "mlx-platform": {
        "path": "drivers/platform/x86",
        "build_opts": {
            "CONFIG_HP_ACCEL": "n"
        }
    },
    "mlxreg-hotplug": {
        "path": "drivers/platform/mellanox"
    },
    "i2c-mlxcpld": {
        "path": "drivers/i2c/busses"
    },
    "i2c-mux-mlxcpld": {
        "path": "drivers/i2c/muxes",
        "build_opts": {
            "CONFIG_I2C_MUX_GPIO": "n"
        }
    },
    "mlxreg-lc": {
        "path": "drivers/platform/mellanox",
        "build_opts": {
            "CONFIG_MLXREG_LC": "m"
        }
    },
    "mlxsw_core": {
        "path": "drivers/net/ethernet/mellanox",
        "build_location" : "mlxsw",
        "build_opts": {
            "CONFIG_MLXSW_CORE": "m",
            "CONFIG_MLXSW_CORE_HWMON": "y",
            "CONFIG_MLXSW_CORE_THERMAL" : "y"
        }
    },
    "mlxsw_i2c": {
        "path": "drivers/net/ethernet/mellanox",
        "build_location" : "mlxsw",
        "build_opts": {
            "CONFIG_MLXSW_I2C" : "m"
        }
    },
    "mlxsw_minimal": {
        "path": "drivers/net/ethernet/mellanox",
        "build_location" : "mlxsw",
        "build_opts": {
            "CONFIG_MLXSW_I2C" : "m"
        }
    },
    "nvsw-sn2201": {
        "path": "drivers/platform/mellanox",
        "build_opts": {
            "CONFIG_NVSW_SN2201" : "m"
        }
    }
}
